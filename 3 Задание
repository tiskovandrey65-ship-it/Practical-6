column_1 = int(input("Введите первое значение колонки:"))
row_1 = int(input("Введите первое значение ряда:"))
column_2 = int(input("Введите второе значение колонки:"))
row_2 = int(input("Введите второе значение ряда:"))

if not (1 <= column_1 <= 8 and 1 <= row_1 <= 8
        and 1 <= column_2 <= 8 and 1 <= row_2 <= 8):
    print("Ошибка ввода")

else:
    if (column_1 + row_1) % 2 == (column_2 + row_2) % 2:
        print("YES")
    else:
        print("NO")
